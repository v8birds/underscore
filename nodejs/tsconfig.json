{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "watch": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "views",
    "static",
    "node_modules"
  ]
}
